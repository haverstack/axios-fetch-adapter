{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["ES2022", "WebWorker"],
    "module": "commonjs",
    "outDir": "./lib",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src/**/*"]
}
